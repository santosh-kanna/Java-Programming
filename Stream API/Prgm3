package stream.api;

import java.util.Arrays;
import java.util.List;
import java.util.stream.Collectors;

public class Stream {                      // Printing the String in the UpperCase if the length greater than or equal to four

    public static void Stream3() {
        
        List<String> l = Arrays.asList("san", "kanna", "tosh");
        l.stream().filter(i -> i.length() >= 4).map(i -> i.toUpperCase()).forEach(s -> System.out.println(s));
        
    }

    public static void main(String args[]) {
        Stream3();
    }
}
