---Output---

    1
   21
  321
 4321
54321

---Code---

class numpattern1{
    public static void main(String args[]){
        int n=5,dup=n-1;
        for(int i=1;i<=n;i++){
            for(int j=1;j<=n-i;j++){
                System.out.print(" ");
            }for(int k=n-dup;k>=1;k--){
                //System.out.print(j);
                System.out.print(k);
                
            }dup--;
            System.out.println();
        }
    }
}
